#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path(File.dirname(__FILE__) + "/../lib"))

require 'skype_archive'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: skype_archive account_name [options] search_text"

  opts.on("-f", "--from", "who sent the message") do |from|
    options['from'] = from
  end

  opts.on_tail("-h", "--help", "Show this message") do
    puts opts
    exit
  end

  opts.parse!
end

if ARGV.size < 2
  puts "account_name and message must be assigned"
else
  account_name = ARGV.first
  text = ARGV.last
  SkypeArchive.search(account_name, text).each do |message|
    printf "%20s [%s]: %s\n", message.from_dispname, message.created_at.strftime("%Y-%m-%d %H:%M:%S"), message.body_xml.gsub(text, "\e[1m\e[34m#{text}\e[0m")
  end
end
